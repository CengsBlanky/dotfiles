inoremap jk <esc>
" TextEdit might fail if hidden is not set.
set number
set relativenumber
set incsearch
set smartcase
set autoindent
set smartindent
set smartcase
set showcmd
set showmatch
" Some servers have issues with backup files, see #649.
set clipboard=unnamed
" display
set hlsearch
set mousehide

" quick upper/lower case
nnoremap <leader>] gUiw
nnoremap <leader>[ guiw
" use backspace to scroll up
nnoremap <BS> <C-b>
" use space to scroll down
nnoremap <Space> <C-f>
" close current buffer
nnoremap <A-b> :bd<CR>

" Show a few lines of context around the cursor. Note that this makes the
" text scroll if you mouse-click near the start or end of the window.
set scrolloff=5
" Don't use Ex mode, use Q for formatting.

" -- Map IDE actions to IdeaVim --
" Source your .vimrc
nnoremap \r :action IdeaVim.ReloadVimRc.reload<CR>
" smart join for <C-J>
set ideajoin
set ideamarks
" enable vim-surround
set surround
" enable commentary
set commentary
" enable sneak
set sneak
set clipboard+=ideaput
" use <leader>f to format code
map <leader>f <Action>(ReformatCode)
" code test
map <C-t> <Action>(Debug)
" code run
map <C-r> <Action>(Run)
" Map \b to toggle the breakpoint on the current line
map \b <Action>(ToggleLineBreakpoint)
nnoremap g] <Action>(GotoNextError)
nnoremap g[ <Action>(GotoPreviousError)
nnoremap gi :action GotoImplementation<CR>
nnoremap gd :action GotoDeclaration<CR>
nnoremap gp :action GotoSuperMethod<CR>
nnoremap gt :action GotoTest<CR>
nnoremap gb :action Back<CR>
nnoremap gf :action Forward<CR>
" Find more examples here: https://jb.gg/share-ideavimrc

set ideastrictmode