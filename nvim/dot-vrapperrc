" http://vrapper.sourceforge.net/documentation/?topic=introduction
set autoindent
set smartcase
set incsearch
set number
set relativenumber
set textwidth=0
set softtabstop=4
set tabstop=4
set shiftround
set clipboard=unnamed

set imdisable

inoremap jk <ESC>
nnoremap <Enter> :w<CR>
nnoremap <leader>q :bd<CR>

nmap s <Plug>(sneak_s)
nmap S <Plug>(sneak_S)

nmap ; <Plug>(sneak-next)
nmap , <Plug>(sneak-prev)

vmap s <Plug>(sneak_s)
vmap Z <Plug>(sneak_S)

vmap ; <Plug>(sneak-next)
vmap , <Plug>(sneak-prev)

nmap f <Plug>(sneak_f)
nmap F <Plug>(sneak_F)
nmap t <Plug>(sneak_t)
nmap T <Plug>(sneak_T)

vmap f <Plug>(sneak_f)
vmap F <Plug>(sneak_F)
vmap t <Plug>(sneak_t)
vmap T <Plug>(sneak_T)

omap z <Plug>(sneak_s)
omap Z <Plug>(sneak_S)
