set statusline+=\ %r
set statusline+=\ %m
set statusline+=\ [%{&ff}]
set statusline+=%=
set statusline+=%y
set statusline+=%6.50l/%-6.50L
set statusline+=%P
set statusline+=\ 

" }}}
