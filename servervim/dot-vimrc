set nocompatible
filetype plugin indent on
syntax on
inoremap jk <Esc>
set clipboard=unnamed
set backspace=2
set tabstop=4 shiftwidth=4 expandtab smartindent autoindent shiftround
set softtabstop=4
set showcmd
set smartcase
set wildmenu
set hlsearch
set splitbelow
set splitright
set laststatus=2
set ruler
nnoremap <C-j> <C-f>
nnoremap <C-k> <C-b>
nnoremap <Enter> :w<CR>
nnoremap <leader>q :x<CR>
nnoremap <C-n> :bn<CR>
nnoremap <silent><leader>/ :vsplit<CR>
nnoremap <silent><leader>- :split<CR>
nnoremap <Esc>w <C-w>c
