export PS1="%F{cyan}%n@%m %F{yellow}%~ %F{green}$%F{fff} "
export "LANG=en_US.UTF-8"

# use rg for fzf finder
if type rg &> /dev/null; then
    export FZF_DEFAULT_COMMAND="rg --files --hidden --column --line-number --no-heading --no-ignore --smart-case --ignore-file $HOME/.vim/ignorefile"
fi
# MacPorts Installer addition on 2021-12-21_at_14:32:34: adding an appropriate PATH variable for use with MacPorts.
export PATH="/opt/local/bin:/opt/local/sbin:$PATH"
# Finished adapting your PATH environment variable for use with MacPorts.

JAVA8_HOME="/Library/Java/JavaVirtualMachines/jdk1.8.0_311.jdk/Contents/Home"
JAVA11_HOME="/Library/Java/JavaVirtualMachines/jdk-11.0.7.jdk/Contents/Home"
export JAVA_HOME=${JAVA11_HOME}

export GOPATH="$HOME/go"
export GO111MODULE=auto

export PATH="$PATH:$HOME/bin/"
export PATH="$PATH:$HOME/.local/bin/"
export PATH="$JAVA_HOME:$PATH"
# php dependencies path
export PHP_HOME="/usr/local/opt/php/bin"
export PATH="/usr/local/opt/openldap/bin:$PATH"
export PATH="/usr/local/opt/curl/bin:$PATH"
export PATH="/usr/local/opt/libpq/bin:$PATH"
# add php path
export PATH=$PHP_HOME:$PATH
# llvm setting
export PATH="/usr/local/opt/llvm/bin:$PATH"
export PATH="/usr/local/opt/llvm:$PATH"
# add mysql path
export PATH="/usr/local/opt/mysql/bin:$PATH"
# go path
export PATH="$HOME/go/bin:$PATH"
# add rust path
# add go path
export PATH="$HOME/go/bin/:$PATH"
# add Flutter path
export PATH="$HOME/tools/flutter/bin/:$PATH"
# add latest ruby path
export PATH="/usr/local/opt/ruby/bin:$PATH"
# self define ruby install dir
export GEM_HOME=$HOME/.gem
export PATH=$GEM_HOME/bin:$PATH

. "$HOME/.cargo/env"

if [ "$(command -v nvim)" ]                                                                                                   
then
    alias vim=nvim
    export VISUAL=nvim
    export EDITOR=nvim
elif [ "$(command -v vim)" ]
then
    export VISUAL=vim
    export EDITOR=vim
fi

[ -s "$HOME/.zsh_aliases" ] && \. "$HOME/.zsh_aliases"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
